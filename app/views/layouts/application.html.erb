<!DOCTYPE html>
<html>
  <head>
    <title>Star</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="http://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
  </head>

  <body>
    <div id="flex-content-container">
  <% if notice.present? %>
    <p class="alert alert-info"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

  <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
  <!-- Just an Image-->
  <a class="navbar-brand navbar-brand-right" href="#"> 
    <%= image_tag 'ss-logo.jpg', class: "logo-image"%>
  </a>


  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
 
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <%= link_to 'Home', root_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'About Us', employee_about_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Cargo Destinations', employee_destinations_path, class: 'nav-link' %>
       </li>
      <li class="nav-item">
        <%= link_to 'Ask Us', new_quote_path, class: 'nav-link' %> 
      </li>
      <li class="nav-item">
        <%= link_to 'Previous Inquiries', quotes_path, class: 'nav-link' %>
      </li>
     
    </ul>
    <ul class="navbar-nav">

      <% if user_signed_in?%>
        <li class="nav-item">
          <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
        </li>
      <% else %> 
        <li class="nav-item">
          <%= link_to 'Sign In', new_user_session_path,  class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
        </li>
      <% end %>
    </ul>

  </div>
</nav>

<script src="http://vjs.zencdn.net/5.12.6/video.js"></script>
<script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>

    <%= yield %>
  </div> 

  <div id="footer">
    <div class= "text-center">
      <b>Simply the Best!</b>
      <br/>
      <%= link_to 'Create a Destination', new_employee_destination_path %>
      <ul class="navbar-nav">
      <% if employee_signed_in?%>
        <li class-"nav-item">
          <%= link_to 'Employee Sign Out', destroy_employee_session_path, method: :delete, class: 'nav-link' %>
        </li>
      <% else %> 
        <li class="nav-item">
          <%= link_to 'Employee Sign In', new_employee_session_path,  class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Employee Sign up', new_employee_registration_path, class: 'nav-link' %>
        </li>
      <% end %>
      </ul>
    </div>
    <br/>
    <div class="text-center">

      <b>Contact Us!</b>

      <p>Phone Number: </p>

      <p>Email: </p>
    </div>
      
  <div/>

   
  
  </body>
</html>
